#include <stdio.h>

int main()

{
int a;
char koniec='t';

do
{
long int silnia=1;

printf("Podaj liczbe");
scanf("%i" , &a);

while (a>0)
{
silnia=silnia*a;
a=a-1;
}
printf("wynik silni = %d\n" , silnia);

printf("Czy chcesz kontynuowac? tak/nie");
scanf("%c" , &koniec);
}

while("koniec=='t'");


return 0;
}





